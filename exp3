package Experiments_Programs;
import java.util.Scanner;

class Employee {
  String emp_name, address, mail_id;
  long emp_id, mobile_no;
  float bp, da, hra, pf, sf;
  float gsalary, nsalary;
  Employee (String name, long empid, String address, String mailid,
  long mobileno, float bp)
    {
      this.emp_name = name;
      this.emp_id = empid;
      this.address = address;
      this.mail_id = mailid;
      this.mobile_no = mobileno;
      this.bp = bp;
    }

    {
      da = (bp* 0.97f);
      hra = (bp * 0.10f);
      pf = (bp * 0.12f);
      sf = (bp* 0.01f);
    }

    public void getGrossSalary()
    {
      gsalary = bp + hra + da;
      System.out.println( "Gross salary is: "+ gsalary);
    }

    public void getNetSalary()
    {
      nsalary = gsalary - pf - sf;
      System.out.println( "Net salary is: "+ nsalary);
    }


  public void displayData()
  {
      System.out.println("-----------------------------");
      System.out.println( "Name: " + emp_name);
      System.out.println( "ID: " + emp_id);
      System.out.println( "Address: " + address);
      System.out.println( "Mail id: " + mail_id);
      System.out.println( "Mobile no: " + mobile_no);
    System.out.println("--------------Salary_Slip--------------");
      System.out.println( "Basic pay: " + bp);
      System.out.println( "Dearness allowance: " + da);
      System.out.println( "HRA: " + hra);
      System.out.println( "Providant fund: " + pf);
    System.out.println( "Staff Club fund: " + sf);
  }
}
  //Parameter
  
    class Programmer extends Employee
      {
         Programmer (String name, long empid, String address, String mailid,
          long mobileno, float bp)  
        {
          super(name, empid, address, mailid, mobileno, bp);
        }
  
      }
     
        
    
  class TeamLead extends Employee {
    TeamLead (String name, long empid, String address, String mailid,
    long mobileno, float bp)  
      {
        super(name, empid, address, mailid, mobileno, bp);
      }
  }
  class AssistantProjectManager extends Employee {
    AssistantProjectManager (String name, long empid, String address, String mailid,
    long mobileno, float bp)
      {
        super(name, empid, address, mailid, mobileno, bp);
      }
  }
  class ProjectManager extends Employee {
    ProjectManager (String name, long empid, String address, String mailid,
    long mobileno, float bp)
      {
        super(name, empid, address, mailid, mobileno, bp);
      }
  }
   class MainClass
    {
      public void main (String[] args)
      {
        Scanner sc = new Scanner (System.in);
        System.out.print("Enter the name of Employee: ");
        String name = sc.next();
        System.out.print ("Enter Employee id: ");
        long empid = sc.nextLong();

        System.out.print ("Enter the Address: ");
        String address = sc.next ();
        System.out.print ("Enter the mail id: ");
        String mailid = sc.next();
        System.out.print ("Enter the mobile no: ");
        long mobileno = sc.nextLong();
        System.out.print ("Enter Basic Pay (BP): ");
        float bp = sc.nextFloat();
        
        Employee p = new Programmer (name, empid, address, mailid, mobileno, bp);
        TeamLead t = new TeamLead (name, empid, address, mailid, mobileno, bp);
        Employee aps = new AssistantProjectManager (name, empid, address, mailid, mobileno, bp);
        Employee pm = new ProjectManager (name, empid, address, mailid, mobileno, bp);
        p.calculateData(bp);
        p.displayData();
        p.getGrossSalary();
        p.getNetSalary();
      }
}
